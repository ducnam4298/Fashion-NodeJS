              | Category
          li
            a.waves-effect(href='#')
              i.fa.fa-book.fa-fw(aria-hidden='true')
              | Blog
          li
            a.waves-effect(href='#')
              i.fa.fa-phone.fa-fw(aria-hidden='true')
              | Contact
          li
            a.waves-effect(href='#')
              i.fa.fa-bars.fa-fw(aria-hidden='true')
