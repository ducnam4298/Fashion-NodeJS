  // ==============================================================
  // Preloader
  // ==============================================================
  .preloader
    svg.circular(viewbox='25 25 50 50')
      circle.path(cx='50' cy='50' r='20' fill='none' stroke-width='2' stroke-miterlimit='10')
  // ==============================================================
  // Wrapper
  // ==============================================================
  #wrapper
    // ==============================================================
    // Topbar header - style you can find in pages.scss
    // ==============================================================
    nav.navbar.navbar-default.navbar-static-top.m-b-0
      .navbar-header
        .top-left-part
          // Logo
          a.logo(href='#')
            // Logo icon image, you can use font-icon also
            b
              // This is dark logo icon
              img.dark-logo(src='../auth/plugins/images/admin-logo.png' alt='home')
              // This is light logo icon
              img.light-logo(src='../auth/plugins/images/admin-logo-dark.png' alt='home')
            // Logo text image you can use text also
            span.hidden-xs
              // This is dark logo text
              img.dark-logo(src='../auth/plugins/images/admin-text.png' alt='home')
              // This is light logo text
              img.light-logo(src='../auth/plugins/images/admin-text-dark.png' alt='home')
        // /Logo
        ul.nav.navbar-top-links.navbar-right.pull-right
          li
            a.nav-toggler.open-close.waves-effect.waves-light.hidden-md.hidden-lg(href='javascript:void(0)')
              i.fa.fa-bars
          li
            form.app-search.hidden-sm.hidden-xs.m-r-10(role='search')
              input.form-control(type='text' placeholder='Search.')
              a(href='')
                i.fa.fa-search(style='color:#ffffff')
          li
            a.profile-pic(href='#')
              img.img-circle(src='../auth/plugins/images/users/varun.jpg' alt='user-img' width='36')
              b.hidden-xs Nam Đẹp Trai
